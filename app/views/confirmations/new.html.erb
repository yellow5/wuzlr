<% @subheader = "Resend confirmation instructions" %>

<% semantic_form_for resource_name, resource, :url => confirmation_path(resource_name) do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :email %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button "Resend instructions" %>
  <% end %>
<% end %>

<%= render :partial => "shared/devise_links" %>
